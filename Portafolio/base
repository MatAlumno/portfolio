-- PROYECTOS TECNOLOGÍAS
CREATE TABLE IF NOT EXISTS proyectos_tecnologias (
    id INT AUTO_INCREMENT PRIMARY KEY,
    proyecto_id INT,
    tecnologia VARCHAR(120),
    FOREIGN KEY (proyecto_id) REFERENCES proyectos(id)
);

