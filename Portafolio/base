-- CONTENIDO GENERAL
CREATE TABLE IF NOT EXISTS contenido (
    id INT AUTO_INCREMENT PRIMARY KEY,
    seccion VARCHAR(50) NOT NULL,
    titulo VARCHAR(150),
    texto TEXT
);

