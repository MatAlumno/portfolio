-- DATOS PERSONALES
CREATE TABLE IF NOT EXISTS datos_personales (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(120),
    descripcion TEXT,
    avatar_url VARCHAR(255),
    fondo_url VARCHAR(255),
    edad INT,
    pais VARCHAR(120),
    ocupacion VARCHAR(120)
);

