-- CONTACTO
CREATE TABLE IF NOT EXISTS contacto (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    valor VARCHAR(255),
    icono_url VARCHAR(255)
);

