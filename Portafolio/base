-- GUSTOS ITEMS
CREATE TABLE IF NOT EXISTS gustos_items (
    id INT AUTO_INCREMENT PRIMARY KEY,
    categoria_id INT,
    nombre VARCHAR(120),
    descripcion TEXT,
    imagen_url VARCHAR(255),
    ranking INT,
    FOREIGN KEY (categoria_id) REFERENCES gustos_categorias(id)
);

