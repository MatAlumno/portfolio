-- TRAYECTO
CREATE TABLE IF NOT EXISTS trayecto (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(120),
    descripcion TEXT,
    fecha_inicio DATE,
    fecha_fin DATE,
    icono_url VARCHAR(255)
);

INSERT INTO trayecto (titulo, descripcion, fecha_inicio, fecha_fin, icono_url) VALUES
