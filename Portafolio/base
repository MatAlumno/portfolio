('Primer trabajo IT', 'Mi primera experiencia laboral real en tecnología.', '2023-08-01', '2024-02-01', '/icons/work.png');


-- PROYECTOS
CREATE TABLE IF NOT EXISTS proyectos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(150),
    descripcion TEXT,
    link VARCHAR(255),
    imagen_url VARCHAR(255),
    fecha DATE
);

INSERT INTO proyectos (nombre, descripcion, link, imagen_url, fecha) VALUES
('Portfolio Web', 'Mi portfolio personal con estética fuerte, diseño propio y secciones dinámicas.', 'https://miportfolio.com', '/proyectos/portfolio.png', '2024-01-10'),
('App Todo', 'Aplicación de tareas con CRUD completo y backend simple.', 'https://github.com/mateo/todo', '/proyectos/todo.png', '2024-03-15');


-- PROYECTOS TECNOLOGÍAS
CREATE TABLE IF NOT EXISTS proyectos_tecnologias (
    id INT AUTO_INCREMENT PRIMARY KEY,
    proyecto_id INT,
    tecnologia VARCHAR(120),
    FOREIGN KEY (proyecto_id) REFERENCES proyectos(id)
);

INSERT INTO proyectos_tecnologias (proyecto_id, tecnologia) VALUES
(1, 'HTML'),
(1, 'CSS'),
