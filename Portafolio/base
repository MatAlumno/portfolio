-- BLOG
CREATE TABLE IF NOT EXISTS posts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(150),
    contenido TEXT,
    fecha DATETIME,
    portada_url VARCHAR(255)
);

INSERT INTO posts (titulo, contenido, fecha, portada_url) VALUES
('Mi identidad', 'Profundizo en quién soy, qué me mueve y cómo veo el mundo.', NOW(), '/blog/post_identidad.jpg'),
('Estética oscura japonesa', 'Por qué Yamamoto, Rick Owens y lo gótico-industrial representan mi identidad.', NOW(), '/blog/post_estetica.jpg');


-- BLOG MULTIMEDIA
CREATE TABLE IF NOT EXISTS posts_multimedia (
    id INT AUTO_INCREMENT PRIMARY KEY,
    post_id INT,
    tipo ENUM('imagen','audio','video','archivo','link'),
    url VARCHAR(255),
    descripcion TEXT,
    FOREIGN KEY (post_id) REFERENCES posts(id)
);

INSERT INTO posts_multimedia (post_id, tipo, url, descripcion) VALUES
