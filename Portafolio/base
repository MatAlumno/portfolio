-- GALERÍA
CREATE TABLE IF NOT EXISTS galeria (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(120),
    descripcion TEXT,
    imagen_url VARCHAR(255)
);

INSERT INTO galeria (titulo, descripcion, imagen_url) VALUES
