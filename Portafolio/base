-- PROYECTOS
CREATE TABLE IF NOT EXISTS proyectos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(150),
    descripcion TEXT,
    link VARCHAR(255),
    imagen_url VARCHAR(255),
    fecha DATE
);

