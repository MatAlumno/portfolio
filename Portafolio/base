-- BLOG
CREATE TABLE IF NOT EXISTS posts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(150),
    contenido TEXT,
    fecha DATETIME,
    portada_url VARCHAR(255)
);

